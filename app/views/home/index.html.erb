<% if user_signed_in? %>
    <h1>Hello World</h1>

    <%= form_with model: Chirp.new, url: chirps_path, local: true do |f| %>
        <%= f.text_field :body %>
        <%= f.submit %>
    <% end %>

    <ul>
        <% Chirp.find_each do |chirp| %>
            <li> <%= chirp.body%> </li>
        <% end %>
    </ul>
    <%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "btn btn-primary btn-lrg"%>
<% else %>
    <h1>Welcome to CHIRPS</h1>
    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lrg"%>
    <%= link_to "Log in", new_user_session_path, class: "btn btn-outline-primary btn-lrg" %>
<% end %>